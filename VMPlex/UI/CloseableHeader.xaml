<UserControl x:Class="VMPlex.UI.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VMPlex.UI"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="&#xE8A5;" Name="Icon" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="16" Padding="0"/>
            <Label Content="TabItem" Name="Title" VerticalAlignment="Center" FontFamily="Segoe UI" Padding="0"/>
            <Button Content="&#xE711;" Name="closeButton" Visibility="Hidden" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="15,0,-3,0" Padding="0" IsTabStop="False" Background="{DynamicResource TabItemBackground}"/>
        </StackPanel>
    </Grid>
</UserControl>
